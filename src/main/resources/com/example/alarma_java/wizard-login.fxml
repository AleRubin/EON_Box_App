<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alarma_java.Controller.loginController">
    <top>
        <HBox alignment="CENTER" prefHeight="64.0" prefWidth="1240.0" spacing="10" style="-fx-background-color: rgba(38,64,67,255);">
            <ImageView fx:id="logoImageViewTopLeft" fitHeight="68.0" fitWidth="108.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.png" />
                </image>
            </ImageView>
            <ImageView fx:id="logoImageViewTopRight" fitHeight="53.0" fitWidth="198.0" preserveRatio="true">
                <image>
                    <Image url="@../images/titulo.png" />
                </image>
            </ImageView>
            <Region prefHeight="20.0" prefWidth="991.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
<VBox fx:id="mainContainer" alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" spacing="20" style="-fx-background-color: rgba(38,64,67,255); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Text style="-fx-font-size: 18px; -fx-fill: #ffffff;" text="Ingrese su contraseña de acceso" />
    <TextField fx:id="passwordField" promptText="Contraseña" style="-fx-max-width: 200px; -fx-pref-height: 30px;" />
    <GridPane fx:id="numPad" alignment="CENTER" hgap="10" prefHeight="243.0" prefWidth="259.0" vgap="10">
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="3" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button style="-fx-min-width: 60px; -fx-min-height: 60px;" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
     <Button style="-fx-min-width: 120px; -fx-min-height: 60px; -fx-background-color: #388e3c; -fx-text-fill: #ffffff;" onAction="#login" text="Ingresar" />
    <HBox alignment="CENTER_RIGHT" spacing="10" />
</VBox>
    </center>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="457.0" prefWidth="46.0" spacing="10" style="-fx-background-color: rgba(38,64,67,255);">
            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#gotoInfo" style="-fx-background-color: rgba(38,64,67,255);">
                <graphic>
                    <ImageView fitHeight="51.0" fitWidth="61.0" preserveRatio="true">
                        <image>
                            <Image url="@../images/info.png" />
                        </image>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
</BorderPane>
